#! /bin/sh
# postrm script for snpservices
#
# see: dh_installdeb(1)

set -e


case "$1" in
        purge|remove)

                if [ -e /usr/share/debconf/confmodule ] ; then

                        . /usr/share/debconf/confmodule
                        db_purge

                fi

                if [ -x /usr/bin/ucf ] ; then 

                        /usr/bin/ucf --purge /etc/guifi-proxy3/config.sh
                        /bin/rm -rf /etc/guifi-proxy3/
                fi
		
		if [ -e /etc/squid3/squid.conf.backup.initial ]; then

			echo "Restoring the initial configuration squid.conf.backup.initial ...... .......";
			/bin/mv -f /etc/squid3/squid.conf.backup.initial /etc/squid3/squid.conf
			/bin/rm -f /etc/squid3/guifi.conf
		fi
		echo "Starting the server squid ...... .......";
		/etc/init.d/squid3 reload 

                ;;

        upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
                ;;

        *)
                echo "prerm called with unknown argument \`$1'" >&2
                exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

