#! /bin/sh
# postrm script for snpservices
#
# see: dh_installdeb(1)

set -e


case "$1" in
        purge|remove)

                if [ -e /usr/share/debconf/confmodule ] ; then

                        . /usr/share/debconf/confmodule
                        db_purge

                fi

                if [ -x /usr/bin/ucf ] ; then 

                        /usr/bin/ucf --purge /etc/guifi-proxy3/config.sh
                        /bin/rm -rf /etc/guifi-proxy3/
                fi
		
		if [ -e /etc/squid3/squid.conf.backup.initial ]; then

			echo "Save settings for future ........ ....... squid.conf.guifi";
			/bin/mv /etc/squid3/squid.conf /etc/squid3/squid.conf.guifi
			echo "Restoring the initial configuration squid.conf.backup.initial ...... .......";
			/bin/mv /etc/squid3/squid.conf.backup.initial /etc/squid3/squid.conf
		fi
		echo "Starting the server squid ...... .......";
		/etc/init.d/squid reload 

                ;;

        upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
                ;;

        *)
                echo "prerm called with unknown argument \`$1'" >&2
                exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0

