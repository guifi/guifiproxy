#!/bin/sh
# preinst script for guifi-proxy3
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        ## if exist custom.conf mv to backup 
        if [ -e /etc/squid3/custom.conf ]
        then
                /bin/mv /etc/squid3/custom.conf /etc/squid3/custom.`date +%y%m%d%H%M`.backup
        fi
        ## if exist old file with users & passwds remove 
        if [ -e /etc/gufi-proxy3/passwd ]
        then
                /bin/rm /etc/gufi-proxy3/passwd
        fi
        ## if exist old file with users & passwds remove 
        if [ -e /etc/gufi-proxy3/passwd.md5 ]
        then
                /bin/rm /etc/gufi-proxy3/passwd.md5
        fi

	exit 0
	;;

    abort-upgrade)
	exit 0
	;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
