#! /bin/sh
# postrm script for guifi-proxy3
#
# see: dh_installdeb(1)

set -e

case "$1" in
        purge|remove)

                if [ -e /usr/share/debconf/confmodule ] ; then

                        . /usr/share/debconf/confmodule
                        db_purge

                fi

                if [ -x /usr/bin/ucf ] ; then

                        /usr/bin/ucf --purge /etc/guifi-proxy3/config.sh
                        /bin/rm -rf /etc/guifi-proxy3/
                fi

		if [ -e /etc/squid3/squid.conf.backup.initial ]; then
	                echo "Restoring the initial configuration squid.conf.backup.initial ...... .......";
			mv /etc/squid3/squid.conf.backup.initial /tmp/squid3_squid.conf
			else
			grep -Ev 'guifi.conf|custom.conf' /etc/squid3/squid.conf > /tmp/squid3_squid.conf
			mv /tmp/squid3_squid.conf /etc/squid3/squid.conf

		fi
		echo "Starting the server squid ...... .......";
		/usr/sbin/service squid3 restart

                ;;

        upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
                ;;

        *)
                echo "prerm called with unknown argument \`$1'" >&2
                exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section


exit 0

